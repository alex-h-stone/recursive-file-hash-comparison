<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>application.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger %msg%n</pattern>
        </encoder>
    </appender>


    <appender name="Publish" class="ch.qos.logback.core.FileAppender">
        <file>Publish.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="Consume" class="ch.qos.logback.core.FileAppender">
        <file>Consume.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="dev.alexhstone.producer.PublishWorkItemsToQueue" level="info" additivity="false">
        <appender-ref ref="Publish"/>
    </logger>

    <logger name="dev.alexhstone.consumer.ProcessWorkItemsFromTheQueue" level="info" additivity="false">
        <appender-ref ref="Consume"/>
    </logger>

    <root level="info">
        <appender-ref ref="Publish"/>
        <appender-ref ref="Consume"/>
    </root>

</configuration>
